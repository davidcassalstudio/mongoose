<%- include('./includes/header.ejs'); %>
<body>
    <section>
        <h1>HOME</h1>
    </section>
    <section class="table">
        <table class="table__item">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>E-mail</th>
                    <th>Telefone</th>
                    <th>Ações</th>
                </tr>
            </thead>

            <tbody>
                <% contatos.forEach(contato => { %>
                    <tr>
                        <td><%- contato.nome; %></td>
                        <td><%- contato.email; %></td>
                        <td><%- contato.telefone; %></td>
                        <td>
                            <a href="/editar-contato/<%- contato._id; %>">Editar</a>
                            <a href="/delete-item/<%- contato._id; %>">Deletar</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>

        </table>
    </section>
<%- include('./includes/footer.ejs'); %>